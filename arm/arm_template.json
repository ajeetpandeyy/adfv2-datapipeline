{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "factoryName": {
            "type": "string",
            "metadata": "Data Factory Name",
            "defaultValue": "adfv2boc01"
        },
        "AzureStorage1_speedtest_connectionString": {
            "type": "string",
            "metadata": "Secure string for 'connectionString' of 'AzureStorage1_speedtest'"
        },
        "linkedService1_Spark_servicePrincipalKey": {
            "type": "string",
            "metadata": "Secure string for 'servicePrincipalKey' of 'linkedService1_Spark'"
        }
    },
    "variables": {
        "factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
    },
    "resources": [
        {
            "name": "[concat(parameters('factoryName'), '/pipeline1')]",
            "type": "Microsoft.DataFactory/factories/pipelines",
            "apiVersion": "2017-09-01-preview",
            "properties": {
                "activities": [
                    {
                        "name": "Spark1",
                        "type": "HDInsightSpark",
                        "dependsOn": [],
                        "policy": {
                            "timeout": "7.00:00:00",
                            "retry": 0,
                            "retryIntervalInSeconds": 30,
                            "secureOutput": false
                        },
                        "typeProperties": {
                            "rootPath": "boc/scripts",
                            "entryFilePath": "pyspark_boc.py",
                            "arguments": [],
                            "sparkJobLinkedService": {
                                "referenceName": "AzureStorage1_speedtest",
                                "type": "LinkedServiceReference"
                            }
                        },
                        "linkedServiceName": {
                            "referenceName": "linkedService1_Spark",
                            "type": "LinkedServiceReference"
                        }
                    }
                ]
            },
            "dependsOn": [
                "[concat(variables('factoryId'), '/linkedServices/AzureStorage1_speedtest')]",
                "[concat(variables('factoryId'), '/linkedServices/linkedService1_Spark')]"
            ]
        },
        {
            "name": "[concat(parameters('factoryName'), '/AzureStorage1_speedtest')]",
            "type": "Microsoft.DataFactory/factories/linkedServices",
            "apiVersion": "2017-09-01-preview",
            "properties": {
                "type": "AzureStorage",
                "typeProperties": {
                    "connectionString": {
                        "type": "SecureString",
                        "value": "[parameters('AzureStorage1_speedtest_connectionString')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "name": "[concat(parameters('factoryName'), '/linkedService1_Spark')]",
            "type": "Microsoft.DataFactory/factories/linkedServices",
            "apiVersion": "2017-09-01-preview",
            "properties": {
                "type": "HDInsightOnDemand",
                "typeProperties": {
                    "clusterType": "spark",
                    "clusterSize": 4,
                    "timeToLive": "00:08:00",
                    "version": "3.6",
                    "hostSubscriptionId": "aa53c20a-7cfe-4746-b562-6e23ada384ae",
                    "clusterResourceGroup": "stefrecstandardeastus_rg",
                    "servicePrincipalId": "093f786a-7617-4446-9a64-8831dbcae493",
                    "tenant": "72f988bf-86f1-41af-91ab-2d7cd011db47",
                    "clusterNamePrefix": "",
                    "sparkVersion": "",
                    "servicePrincipalKey": {
                        "type": "SecureString",
                        "value": "[parameters('linkedService1_Spark_servicePrincipalKey')]"
                    },
                    "linkedServiceName": {
                        "referenceName": "AzureStorage1_speedtest",
                        "type": "LinkedServiceReference"
                    },
                    "headNodeSize": "",
                    "dataNodeSize": "",
                    "zookeeperNodeSize": ""
                }
            },
            "dependsOn": [
                "[concat(variables('factoryId'), '/linkedServices/AzureStorage1_speedtest')]"
            ]
        }
    ]
}